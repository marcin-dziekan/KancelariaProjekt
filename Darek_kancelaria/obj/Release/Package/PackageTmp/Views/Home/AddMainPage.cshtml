@model Darek_kancelaria.Models.MainPageContent


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal ContentPadTop">
        <div class="row">
            <div class="col-md-4 hidden-sm hidden-xs">
                @Html.Partial("FullSiteManagerMenu")
            </div>
            <div class="col-md-8 col-sm-12 col-xs-12">
                <h4>Sekcja po lewej</h4>
                <hr />
                <div class="col-md-8 col-md-offset-4">
                    <h3 style="color:#923233">@ViewBag.Message</h3>
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.FirsGrid.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.FirsGrid.Title, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tytuł sekcji" } })
                        @Html.ValidationMessageFor(model => model.FirsGrid.Title, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.FirsGrid.Content, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.FirsGrid.Content, htmlAttributes: new { @class = "form-control txtField", @placeholder = "Treść zapytania", @style = "height:220px;" })
                        @Html.ValidationMessageFor(model => model.FirsGrid.Content, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.HiddenFor(model => model.FirsGrid.WitchGrid, new { Value = "1" })
                        @Html.ValidationMessageFor(model => model.FirsGrid.WitchGrid, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />
                <h4>Sekcja w środku</h4>
                <hr />
                <br />
                <div class="form-group">
                    @Html.LabelFor(model => model.SecGrid.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SecGrid.Title, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tytuł sekcji" } })
                        @Html.ValidationMessageFor(model => model.SecGrid.Title, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SecGrid.Content, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.SecGrid.Content, htmlAttributes: new { @class = "form-control txtField", @placeholder = "Treść zapytania", @style = "height:220px;" })
                        @Html.ValidationMessageFor(model => model.SecGrid.Content, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10 col-md-offset-2">
                        @Html.HiddenFor(model => model.SecGrid.WitchGrid, new { Value = "2" })
                        @Html.ValidationMessageFor(model => model.SecGrid.WitchGrid, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />
                <h4>Sekcja po prawej</h4>
                <hr />
                <br />
                <div class="form-group">
                    @Html.LabelFor(model => model.ThirdGrid.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ThirdGrid.Title, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tytuł sekcji" } })
                        @Html.ValidationMessageFor(model => model.ThirdGrid.Title, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ThirdGrid.Content, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.ThirdGrid.Content, htmlAttributes: new { @class = "form-control txtField", @placeholder = "Treść zapytania", @style = "height:220px;" })
                        @Html.ValidationMessageFor(model => model.ThirdGrid.Content, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.HiddenFor(model => model.ThirdGrid.WitchGrid, new { Value = "3" })
                        @Html.ValidationMessageFor(model => model.ThirdGrid.WitchGrid, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="ZAPISZ" class="btn btnStyle" style="width: 100%" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

