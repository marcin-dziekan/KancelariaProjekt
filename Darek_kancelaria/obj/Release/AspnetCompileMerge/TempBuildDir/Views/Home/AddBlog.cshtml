@model Darek_kancelaria.Models.BlogModel


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal ContentPadTop">
        <div class="row">
            <div class="col-md-4 hidden-sm hidden-xs">
                @Html.Partial("FullSiteManagerMenu")
            </div>
            <div class="col-md-8 col-sm-12 col-xs-12">
                <h4>Dodaj wpis bloga</h4>
                <hr />
                <div class="col-md-8 col-md-offset-4">
                    <h3 style="color:#923233">@ViewBag.Message</h3>
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.Title, htmlAttributes: new { @class = "form-control txtField", @placeholder = "Temat wpisu", @style = "height:35px;" })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(Model => Model.Content, htmlAttributes: new { @class = "form-control txtField", @placeholder = "Treść wpisu", @style = "height:46vh;" })
                        @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Zapisz" class="btn btnStyle" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

