@model Darek_kancelaria.Models.PageContent

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal ContentPadTop">
        <div class="row">
            <div class="col-md-4 hidden-sm hidden-xs">
                @Html.Partial("FullSiteManagerMenu")
            </div>
            <div class="col-md-8 col-sm-12 col-xs-12">
                <h4>Edycja treści "Oferta"</h4>
                <hr />
                <div class="col-md-8 col-md-offset-4">
                    <h3 style="color:#923233">@ViewBag.Message</h3>
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.Title, htmlAttributes: new {  @class = "form-control txtField", @placeholder = "Tytuł", @style = "height:35px;" })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Treść", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.Content, htmlAttributes: new { @class = "form-control txtField", @placeholder = "Treść oferty", @style = "height:46vh;" })
                        @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-12">
                    @Html.HiddenFor(model => model.WitchGrid, new { Value = "10" })
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Zapisz" class="btn btnStyle" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}
