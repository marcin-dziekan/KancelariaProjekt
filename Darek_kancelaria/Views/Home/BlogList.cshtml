
@model PagedList.IPagedList<Darek_kancelaria.Models.BlogModel>
@using PagedList.Mvc;



<div class="col-md-12 ContentPadTop">
    <div class="row">
        <div class="col-md-4 hidden-sm hidden-xs">
            @Html.Partial("FullSiteManagerMenu")
        </div>
        <div class="col-md-8 col-sm-12 col-xs-12">
            <h4>Lista dodanych wpisów bloga</h4>
            <hr />
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayName("Tytuł")
                    </th>
                    <th>
                        @Html.DisplayName("Treść")
                    </th>
                    <th>
                        @Html.DisplayName("Dodano")
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr class="element" id="@item.Id">
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @if (@item.Content.Length > 101)
                            {
                                <h5>@item.Content.Substring(0, 100) ...</h5>
                            }
                            else
                            {
                                <h5>@item.Content.Substring(0, item.Content.Length - 1) ...</h5>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AddDate)
                        </td>
                        <td>
                            @Html.ActionLink("Edytuj", "EditBlog", new { id = item.Id })
                            <span style="color:#923233">@Html.ActionLink("Usuń", "DeleteBlog", new { id = item.Id })</span>
                        </td>
                    </tr>
                }

            </table>
            <div class="row">
                <div class="col-md-12 text-center">
                    <h4>Strona @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) z @Model.PageCount</h4>
                </div>
                <div class="col-md-9 col-md-offset-3 text-center">
                    @Html.PagedListPager(Model, page => Url.Action("BlogList", new { page }))
                </div>
            </div>
        </div>
    </div>
</div>
